BLFSTOOLSEQ=792
pkgname=xarchiver
pkgver=0.5.4
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    https://downloads.sourceforge.net/xarchiver/xarchiver-0.5.4.tar.bz2
xarchiver-0.5.4-fixes-1.patch
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('1b4cd37a6af03afc957a8e307417e8d0'
         '0b3c933f2ed64e75d572f88bc26635fd')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
}
# EDITHOOKC
#######  Building package
cd $UNPACKDIR

patch -Np1 -i ../xarchiver-0.5.4-fixes-1.patch &&

./autogen.sh --prefix=/usr               \
             --libexecdir=/usr/lib/xfce4 \
             --disable-gtk3              \
             --docdir=/usr/share/doc/xarchiver-0.5.4 &&
make
sudo -E sh << ROOT_EOF
make -j1 DOCDIR=/usr/share/doc/xarchiver-0.5.4 install
ROOT_EOF
sudo -E sh << ROOT_EOF
update-desktop-database &&
gtk-update-icon-cache -t -f --include-image-data /usr/share/icons/hicolor
ROOT_EOF
sudo /sbin/ldconfig

