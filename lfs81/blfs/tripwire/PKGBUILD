# Maintainer: tba
# THIS PKGBUILD IS AN UNTESTED PROTOTYPE.  USE AT OWN RISK
#
# EDITHOOK1
#

BLFSTOOLSEQ=272
pkgname=tripwire
pkgver=2.4.3.5
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    https://github.com/Tripwire/tripwire-open-source/releases/download/2.4.3.5/tripwire-open-source-2.4.3.5.tar.gz
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('34f09583d7ab4c10003db61707f1b707')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
}
# EDITHOOKC
#######  Building package
cd $UNPACKDIR

sed -e 's|TWDB="${prefix}|TWDB="/var|'   \
    -e '/TWMAN/ s|${prefix}|/usr/share|' \
    -e '/TWDOCS/s|${prefix}/doc/tripwire|/usr/share/doc/tripwire-2.4.3.5|' \
    -i installer/install.cfg                               &&

find . -name Makefile.am | xargs                           \
    sed -i 's/^[[:alpha:]_]*_HEADERS.*=/noinst_HEADERS =/' &&

sed '/dist/d' -i man/man?/Makefile.am                      &&
autoreconf -fi                                             &&

./configure --prefix=/usr --sysconfdir=/etc/tripwire       &&
make
sudo -E sh << ROOT_EOF
make -j1 install &&
cp -v policy/*.txt /usr/share/doc/tripwire-2.4.3.5
ROOT_EOF
sed -i -e 's@installer/install.sh@& -n -s **EDITME<site-password>EDITME** -l **EDITME<local-password>EDITME**@' Makefile
sed '/-t 0/,+3d' -i installer/install.sh
sudo /sbin/ldconfig

sudo -E sh << ROOT_EOF
twadmin --create-polfile --site-keyfile /etc/tripwire/site.key \\
    /etc/tripwire/twpol.txt &&
tripwire --init
ROOT_EOF

sudo -E sh << ROOT_EOF
tripwire --check > /etc/tripwire/report.txt
ROOT_EOF

sudo -E sh << ROOT_EOF
twprint --print-report -r /var/lib/tripwire/report/**EDITME<report-name.twr>EDITME**
ROOT_EOF

sudo -E sh << ROOT_EOF
tripwire --update --twrfile /var/lib/tripwire/report/**EDITME<report-name.twr>EDITME**
ROOT_EOF

sudo -E sh << ROOT_EOF
twadmin --create-polfile /etc/tripwire/twpol.txt &&
tripwire --init
ROOT_EOF

