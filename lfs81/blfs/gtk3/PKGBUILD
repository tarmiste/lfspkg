# Maintainer: tba
# THIS PKGBUILD IS AN UNTESTED PROTOTYPE.  USE AT OWN RISK
#
# EDITHOOK1
#

BLFSTOOLSEQ=293
pkgname=gtk3
pkgver=3.22.18
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    http://ftp.gnome.org/pub/gnome/sources/gtk+/3.22/gtk+-3.22.18.tar.xz
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('5c574a872ef3af67706bd612374ea58b')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
}
# EDITHOOKC
#######  Building package
cd $UNPACKDIR

./configure --prefix=/usr             \
            --sysconfdir=/etc         \
            --enable-broadway-backend \
            --enable-x11-backend      \
            --disable-wayland-backend &&
make
#make -k check || true
sudo -E sh << ROOT_EOF
make -j1 install
ROOT_EOF
sudo -E sh << ROOT_EOF
gtk-query-immodules-3.0 --update-cache
ROOT_EOF
sudo -E sh << ROOT_EOF
glib-compile-schemas /usr/share/glib-2.0/schemas
ROOT_EOF
sudo /sbin/ldconfig

mkdir -vp ~/.config/gtk-3.0
cat > ~/.config/gtk-3.0/settings.ini << "EOF"
[Settings]
gtk-theme-name = **EDITMEAdwaitaEDITME**
gtk-icon-theme-name = **EDITMEoxygenEDITME**
gtk-font-name = **EDITMEDejaVu Sans 12EDITME**
gtk-cursor-theme-size = **EDITME18EDITME**
gtk-toolbar-style = **EDITMEGTK_TOOLBAR_BOTH_HORIZEDITME**
gtk-xft-antialias = **EDITME1EDITME**
gtk-xft-hinting = **EDITME1EDITME**
gtk-xft-hintstyle = **EDITMEhintslightEDITME**
gtk-xft-rgba = **EDITMErgbEDITME**
gtk-cursor-theme-name = **EDITMEAdwaitaEDITME**
EOF

