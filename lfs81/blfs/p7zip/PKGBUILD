# Maintainer: tba
# THIS PKGBUILD IS AN UNTESTED PROTOTYPE.  USE AT OWN RISK
#
# EDITHOOK1
#

BLFSTOOLSEQ=465
pkgname=p7zip
pkgver=16.02
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    https://downloads.sourceforge.net/p7zip/p7zip_16.02_src_all.tar.bz2
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('a0128d661cfe7cc8c121e73519c54fbf')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
}
# EDITHOOKC
#######  Building package
cd $UNPACKDIR

make all3
#make -k test || true
sudo -E sh << ROOT_EOF
make -j1 DEST_HOME=/usr \\
     DEST_MAN=/usr/share/man \\
     DEST_SHARE_DOC=/usr/share/doc/p7zip-16.02 install
ROOT_EOF
sudo /sbin/ldconfig

