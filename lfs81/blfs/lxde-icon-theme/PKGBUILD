#
# EDITHOOK1
#

BLFSTOOLSEQ=625
pkgname=lxde-icon-theme
pkgver=0.5.1
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    https://downloads.sourceforge.net/lxde/lxde-icon-theme-0.5.1.tar.xz
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('7467133275edbbcc79349379235d4411')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
}
# EDITHOOKC
#######  Building package
cd $UNPACKDIR

./configure --prefix=/usr
sudo -E sh << ROOT_EOF
make -j1 install
ROOT_EOF
sudo -E sh << ROOT_EOF
gtk-update-icon-cache -qf ${pkgdir}/usr/share/icons/nuoveXT2
ROOT_EOF
sudo ${pkgdir}/sbin/ldconfig

