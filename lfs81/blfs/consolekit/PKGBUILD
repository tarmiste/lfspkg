# Maintainer: tba
# THIS PKGBUILD IS AN UNTESTED PROTOTYPE.  USE AT OWN RISK
#
# EDITHOOK1
#

BLFSTOOLSEQ=098
pkgname=consolekit
pkgver=1.0.2
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    https://github.com/Consolekit2/ConsoleKit2/releases/download/1.0.2/ConsoleKit2-1.0.2.tar.bz2
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('e03dd98322c78425a87418af9d788518')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
}
# EDITHOOKC
#######  Building package
cd $UNPACKDIR

./configure --prefix=/usr        \
            --sysconfdir=/etc    \
            --localstatedir=/var \
            --enable-udev-acl    \
            --enable-pam-module  \
            --enable-polkit      \
            --with-xinitrc-dir=/etc/X11/app-defaults/xinitrc.d \
            --docdir=/usr/share/doc/ConsoleKit-1.0.2           \
            --with-systemdsystemunitdir=no                     &&
make
sudo -E sh << ROOT_EOF
make -j1 install &&

mv -v /etc/X11/app-defaults/xinitrc.d/90-consolekit{,.sh}
ROOT_EOF
sudo /sbin/ldconfig

sudo -E sh << ROOT_EOF
cat >> /etc/pam.d/system-session << "EOF"
# Begin ConsoleKit addition

session   optional    pam_loginuid.so
session   optional    pam_ck_connector.so nox11

# End ConsoleKit addition
EOF
ROOT_EOF

sudo -E sh << ROOT_EOF
cat > /usr/lib/ConsoleKit/run-session.d/pam-foreground-compat.ck << "EOF"
#!/bin/sh
TAGDIR=/var/run/console

[ -n "\$CK_SESSION_USER_UID" ] || exit 1
[ "\$CK_SESSION_IS_LOCAL" = "true" ] || exit 0

TAGFILE="\$TAGDIR/\`getent passwd \$CK_SESSION_USER_UID | cut -f 1 -d:\`"

if [ "\$1" = "session_added" ]; then
    mkdir -p "\$TAGDIR"
    echo "\$CK_SESSION_ID" >> "\$TAGFILE"
fi

if [ "\$1" = "session_removed" ] && [ -e "\$TAGFILE" ]; then
    sed -i "\\%^\$CK_SESSION_ID\\\$%d" "\$TAGFILE"
    [ -s "\$TAGFILE" ] || rm -f "\$TAGFILE"
fi
EOF
chmod -v 755 /usr/lib/ConsoleKit/run-session.d/pam-foreground-compat.ck
ROOT_EOF

