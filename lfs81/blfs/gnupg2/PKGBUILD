# Maintainer: tba
# THIS PKGBUILD IS AN UNTESTED PROTOTYPE.  USE AT OWN RISK
#
# EDITHOOK1
#

BLFSTOOLSEQ=228
pkgname=gnupg2
pkgver=2.1.23
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    https://www.gnupg.org/ftp/gcrypt/gnupg/gnupg-2.1.23.tar.bz2
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('86c2304ead54b74a422e76c3f1bc7a91')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
}
# EDITHOOKC
#######  Building package
cd $UNPACKDIR

sed -e '/noinst_SCRIPTS = gpg-zip/c sbin_SCRIPTS += gpg-zip' \
    -i tools/Makefile.in
./configure --prefix=/usr            \
            --enable-symcryptrun     \
            --enable-maintainer-mode \
            --docdir=/usr/share/doc/gnupg-2.1.23 &&
make &&

makeinfo --html --no-split \
         -o doc/gnupg_nochunks.html doc/gnupg.texi &&
makeinfo --plaintext       \
         -o doc/gnupg.txt           doc/gnupg.texi
make -C doc pdf ps html
#make -k check || true
sudo -E sh << ROOT_EOF
make -j1 install &&

install -v -m755 -d /usr/share/doc/gnupg-2.1.23/html            &&
install -v -m644    doc/gnupg_nochunks.html \\
                    /usr/share/doc/gnupg-2.1.23/html/gnupg.html &&
install -v -m644    doc/*.texi doc/gnupg.txt \\
                    /usr/share/doc/gnupg-2.1.23
ROOT_EOF
sudo -E sh << ROOT_EOF
install -v -m644 doc/gnupg.html/* \\
                 /usr/share/doc/gnupg-2.1.23/html &&
install -v -m644 doc/gnupg.{pdf,dvi,ps} \\
                 /usr/share/doc/gnupg-2.1.23
ROOT_EOF
sudo /sbin/ldconfig

