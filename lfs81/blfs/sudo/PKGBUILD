# Maintainer: tba
# THIS PKGBUILD IS AN UNTESTED PROTOTYPE.  USE AT OWN RISK
#
# EDITHOOK1
#

BLFSTOOLSEQ=016
pkgname=sudo
pkgver=1.8.20p2
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    http://www.sudo.ws/dist/sudo-1.8.20p2.tar.gz
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('03da8e711caca6fd93e57751bfb74adc')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr              \
            --libexecdir=/usr/lib      \
            --with-secure-path         \
            --with-all-insults         \
            --with-env-editor          \
            --docdir=/usr/share/doc/sudo-1.8.20p2 \
            --with-passprompt="[sudo] password for %p: " 
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	env LC_ALL=C make -k check 2>&1 | tee ../make-check.log || true
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
	ln -sfv libsudo_util.so.0.0.0 ${pkgdir}/usr/lib/sudo/libsudo_util.so.0
	mkdir -pv ${pkgdir}/etc/pam.d
cat > ${pkgdir}/etc/pam.d/sudo << "EOF"
# Begin /etc/pam.d/sudo

# include the default auth settings
auth      include     system-auth

# include the default account settings
account   include     system-account

# Set default environment variables for the service user
session   required    pam_env.so

# include system session defaults
session   include     system-session

# End /etc/pam.d/sudo
EOF
chmod 644 ${pkgdir}/etc/pam.d/sudo
}
# EDITHOOKC
#######  Building package


