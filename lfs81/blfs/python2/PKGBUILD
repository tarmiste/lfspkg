# Maintainer: tba
# THIS PKGBUILD IS AN UNTESTED PROTOTYPE.  USE AT OWN RISK
#
# EDITHOOK1
#

BLFSTOOLSEQ=003
pkgname=python2
pkgver=2.7.13
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    https://www.python.org/ftp/python/2.7.13/Python-2.7.13.tar.xz
    https://www.python.org/ftp/python/doc/2.7.13/python-2.7.13-docs-html.tar.bz2
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('53b43534153bb2a0363f08bae8b9d990'
         '0839cfc2894cded42b3a246a66ad412c')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
}
# EDITHOOKC
#######  Building package
cd $UNPACKDIR

./configure --prefix=/usr       \
            --enable-shared     \
            --with-system-expat \
            --with-system-ffi   \
            --with-ensurepip=yes \
            --enable-unicode=ucs4 &&
make
#make -k test || true
sudo -E sh << ROOT_EOF
make -j1 install &&
chmod -v 755 /usr/lib/libpython2.7.so.1.0
ROOT_EOF
sudo -E sh << ROOT_EOF
install -v -dm755 /usr/share/doc/python-2.7.13 &&

tar --strip-components=1                     \\
    --no-same-owner                          \\
    --directory /usr/share/doc/python-2.7.13 \\
    -xvf ../python-2.7.13-docs-html.tar.bz2 &&

find /usr/share/doc/python-2.7.13 -type d -exec chmod 0755 {} \\; &&
find /usr/share/doc/python-2.7.13 -type f -exec chmod 0644 {} \\;
ROOT_EOF
sudo /sbin/ldconfig

sudo -E sh << ROOT_EOF
export PYTHONDOCS=/usr/share/doc/python-2.7.13
ROOT_EOF

