# Maintainer: tba
# THIS PKGBUILD IS AN UNTESTED PROTOTYPE.  USE AT OWN RISK
#
# EDITHOOK1
#

BLFSTOOLSEQ=393
pkgname=nodejs
pkgver=8.4.0
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    https://nodejs.org/dist/v8.4.0/node-v8.4.0.tar.xz
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('e6c85c83001340b30671e9432e1bd337')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
}
# EDITHOOKC
#######  Building package
cd $UNPACKDIR

PKG_CONFIG_PATH=/usr/lib/openssl-1.0/pkgconfig \
    ./configure --prefix=/usr                  \
                --shared-cares                 \
                --shared-openssl               \
                --shared-zlib                  \
                --with-intl=system-icu         &&
make
sudo -E sh << ROOT_EOF
make -j1 install &&
ln -sf node /usr/share/doc/node-8.4.0
ROOT_EOF
sudo /sbin/ldconfig

