BLFSTOOLSEQ=095
pkgname=docbook-xsl
pkgver=1.79.1
pkgrel=1
# EDITHOOK2
pkgdesc=""
arch=('x86_64')
# EDITHOOK3
url=""
license=('GPL')
groups=()
# EDITHOOK4
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
# EDITHOOK5
source=(
    https://downloads.sourceforge.net/docbook/docbook-xsl-1.79.1.tar.bz2
    https://downloads.sourceforge.net/docbook/docbook-xsl-doc-1.79.1.tar.bz2
)
# EDITHOOK6
noextract=()
# EDITHOOK7

md5sums=('b48cbf929a2ad85e6672f710777ca7bc'
         '7eb51958e1bf97f3c5b013c42eb61e31')

# EDITHOOKPREP
prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

# EDITHOOKBLD
build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

# EDITHOOKCHK
check() {
	cd "$pkgname-$pkgver"
	make -k check
}

# EDITHOOKPKG
package() {
	cd "$pkgname-$pkgver"
	make -j1 DESTDIR="$pkgdir/" install
}
# EDITHOOKC
#######  Building package
cd $UNPACKDIR

tar -xf ../docbook-xsl-doc-1.79.1.tar.bz2 --strip-components=1
sudo -E sh << ROOT_EOF
install -v -m755 -d /usr/share/xml/docbook/xsl-stylesheets-1.79.1 &&

cp -v -R VERSION assembly common eclipse epub epub3 extensions fo        \\
         highlighting html htmlhelp images javahelp lib manpages params  \\
         profiling roundtrip slides template tests tools webhelp website \\
         xhtml xhtml-1_1 xhtml5                                          \\
    /usr/share/xml/docbook/xsl-stylesheets-1.79.1 &&

ln -s VERSION /usr/share/xml/docbook/xsl-stylesheets-1.79.1/VERSION.xsl &&

install -v -m644 -D README \\
                    /usr/share/doc/docbook-xsl-1.79.1/README.txt &&
install -v -m644    RELEASE-NOTES* NEWS* \\
                    /usr/share/doc/docbook-xsl-1.79.1
ROOT_EOF
sudo -E sh << ROOT_EOF
cp -v -R doc/* /usr/share/doc/docbook-xsl-1.79.1
ROOT_EOF
sudo /sbin/ldconfig

sudo -E sh << ROOT_EOF
if [ ! -d /etc/xml ]; then install -v -m755 -d /etc/xml; fi &&
if [ ! -f /etc/xml/catalog ]; then
    xmlcatalog --noout --create /etc/xml/catalog
fi &&

xmlcatalog --noout --add "rewriteSystem" \\
           "http://docbook.sourceforge.net/release/xsl/1.79.1" \\
           "/usr/share/xml/docbook/xsl-stylesheets-1.79.1" \\
    /etc/xml/catalog &&

xmlcatalog --noout --add "rewriteURI" \\
           "http://docbook.sourceforge.net/release/xsl/1.79.1" \\
           "/usr/share/xml/docbook/xsl-stylesheets-1.79.1" \\
    /etc/xml/catalog &&

xmlcatalog --noout --add "rewriteSystem" \\
           "http://docbook.sourceforge.net/release/xsl/current" \\
           "/usr/share/xml/docbook/xsl-stylesheets-1.79.1" \\
    /etc/xml/catalog &&

xmlcatalog --noout --add "rewriteURI" \\
           "http://docbook.sourceforge.net/release/xsl/current" \\
           "/usr/share/xml/docbook/xsl-stylesheets-1.79.1" \\
    /etc/xml/catalog
ROOT_EOF

sudo -E sh << ROOT_EOF
xmlcatalog --noout --add "rewriteSystem" \\
           "http://docbook.sourceforge.net/release/xsl/**EDITME<version>EDITME**" \\
           "/usr/share/xml/docbook/xsl-stylesheets-**EDITME<version>EDITME**" \\
    /etc/xml/catalog &&

xmlcatalog --noout --add "rewriteURI" \\
           "http://docbook.sourceforge.net/release/xsl/**EDITME<version>EDITME**" \\
           "/usr/share/xml/docbook/xsl-stylesheets-**EDITME<version>EDITME**" \\
    /etc/xml/catalog
ROOT_EOF

