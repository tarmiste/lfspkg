# Maintainer: Bruno Pagani <archange@archlinux.org>

pkgname=fractal
pkgver=0.1.6
pkgrel=1
pkgdesc="A GTK+ client for Matrix written in Rust"
arch=('x86_64')
url="https://gitlab.gnome.org/danigm/fractal"
license=('GPL2')
depends=('gtk3')
makedepends=('meson' 'rust')
source=("${url}/uploads/4a7b474105fcf6be012eba7ab68c5422/fractal-0.1.6.tar.xz")
sha256sums=('6a52a231d8fbcf6fe7b5ede11cd24dcdce65832ca05a87aceb7e3851065a32a5')

build() {
    cd ${pkgname}-${pkgver}
    ./configure --prefix=/usr
    make
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}
