# $Id: PKGBUILD 255441 2017-09-02 11:51:27Z foutrelis $
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>
# Maintainer: Charles Mauch <cmauch@gmail.com>

pkgname=perl-net-ipv4addr
pkgver=0.10
pkgrel=9
pkgdesc="Perl/CPAN Module Net::IPv4Addr"
arch=("any")
depends=('perl')
url="http://search.cpan.org/dist/Net-IPv4Addr"
license=("GPL" "PerlArtistic")
source=("http://www.cpan.org/authors/id/F/FR/FRAJULAC/Net-IPv4Addr-$pkgver.tar.gz")
md5sums=('57aa8e28ebcd4c0c9f15792740e53d3c')

build() {
  cd "$srcdir"/Net-IPv4Addr-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd "$srcdir"/Net-IPv4Addr-$pkgver
  make install DESTDIR="$pkgdir"
  find "$pkgdir" -name '.packlist' -delete
  find "$pkgdir" -name '*.pod' -delete
}
