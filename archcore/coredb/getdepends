for i in `cat dirs`
 do 
 if [ -f $i/goo ]
 then
   if [ `grep -c %DEPENDS% $i/desc ` -ne '0' ]
   then 
     end=`grep -m 1 -n "^$" $i/goo |cut -f1 -d ":" -`
     echo ===== $i $end
     head --lines=${end} $i/goo 
     head --lines=${end} $i/goo >$i/depends
     end=`expr $end + 1`
     tail -n+${end} $i/goo >ngoo
     mv ngoo $i/goo
   fi
 fi
 done
