ls */desc |cut -f1 -d "/" - >dirs
for i in `cat dirs`
 do 
   if [ `grep -c %PROVIDES% $i/desc ` -ne '0' ]
   then 
     start=`grep -m 1 -n %PROVIDES% $i/desc | cut -f1 -d ":" -`
     tail -n+${start} $i/desc  >$i/provides
     end=`grep -m 1 -n "^$" $i/provides | cut -f1 -d ":" -`
     #end=`expr $end + 1`
     head -n ${end} $i/provides >$i/foober
     mv $i/foober $i/provides
     cat $i/provides
   fi
 done
